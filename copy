class My_Custom_Search_Widget extends WP_Widget {
    
    public function __construct() {
        parent::__construct(
            'my_custom_search_widget',
            __('Custom Search Widget', 'text_domain'),
            array( 'description' => __( 'A Custom Search Widget using get_search_form()', 'text_domain' ) )
        );
    }

    public function widget( $args, $instance ) {
        echo $args['before_widget']; // Вивід коду перед віджетом (за потреби)

        // Викликаємо кастомну форму пошуку
        get_search_form();

        echo $args['after_widget']; // Вивід коду після віджета (за потреби)
    }

    public function form( $instance ) {
        // Тут можна додати опції для віджета (якщо потрібно)
    }

    public function update( $new_instance, $old_instance ) {
        $instance = array();
        // Обробка збереження нових налаштувань (якщо потрібно)
        return $instance;
    }
}

// Реєструємо кастомний віджет
function register_my_custom_search_widget() {
    register_widget( 'My_Custom_Search_Widget' );
}
add_action( 'widgets_init', 'register_my_custom_search_widget' );