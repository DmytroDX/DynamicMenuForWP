function my_custom_widget_scripts() {
    wp_enqueue_script( 'my-custom-widget', get_template_directory_uri() . '/js/my-custom-widget.js', [ 'jquery' ], false, true );

    wp_localize_script( 'my-custom-widget', 'my_custom_widget', [
        'nonce' => wp_create_nonce( 'my_custom_widget_nonce' ),
    ]);
}
add_action( 'wp_enqueue_scripts', 'my_custom_widget_scripts' );