function load_styles_conditionally() {
    // Стиль для всіх сторінок
    wp_enqueue_style('common-style', get_template_directory_uri() . '/css/common.css');

    // Якщо використовується шаблон `template-one.php`
    if (is_page_template('template-one.php')) {
        wp_enqueue_style('first-style', get_template_directory_uri() . '/css/first-style.css', array('common-style'));
        wp_enqueue_style('second-style', get_template_directory_uri() . '/css/second-style.css', array('first-style'));
    }
    // Якщо використовується шаблон `template-two.php`
    elseif (is_page_template('template-two.php')) {
        wp_enqueue_style('second-style', get_template_directory_uri() . '/css/second-style.css', array('common-style'));
        wp_enqueue_style('first-style', get_template_directory_uri() . '/css/first-style.css', array('second-style'));
    }
}

add_action('wp_enqueue_scripts', 'load_styles_conditionally');