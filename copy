class Custom_Widget extends \Elementor\Widget_Base {

    public function get_name() {
        return 'custom_widget';
    }

    public function get_title() {
        return __( 'Custom Widget', 'text-domain' );
    }

    public function get_icon() {
        return 'eicon-code';
    }

    public function get_categories() {
        return [ 'general' ];
    }

    protected function _register_controls() {
        $this->start_controls_section(
            'content_section',
            [
                'label' => __( 'Content', 'text-domain' ),
                'tab' => \Elementor\Controls_Manager::TAB_CONTENT,
            ]
        );

        // Контроль для вставки віджетів
        $this->add_control(
            'inner_widgets',
            [
                'label' => __( 'Add Widgets', 'text-domain' ),
                'type' => \Elementor\Controls_Manager::REPEATER,
                'fields' => [],
            ]
        );

        $this->end_controls_section();
    }

    protected function render() {
        // Тут ви можете викликати інші віджети або контент за допомогою функцій Elementor
        echo '<div class="custom-widget">';

        // Вставка внутрішніх віджетів
        echo \Elementor\Plugin::$instance->frontend->get_builder_content_for_display($this->get_settings('inner_widgets'));

        echo '</div>';
    }

}