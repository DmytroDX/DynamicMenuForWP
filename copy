<?php
$args = array(
    'post_type' => array('type1', 'type2', 'type3'), // Ваші кастомні типи постів
    'posts_per_page' => -1,
);
$query = new WP_Query($args);

if ($query->have_posts()) : 
    while ($query->have_posts()) : $query->the_post(); ?>
        <div class="post-tile">
            <a href="#post-<?php the_ID(); ?>" data-fancybox="gallery" data-src="#content-<?php the_ID(); ?>">
                <h3><?php the_title(); ?></h3>
            </a>
        </div>

        <!-- Прихований контент для lightbox -->
        <div id="content-<?php the_ID(); ?>" style="display: none;">
            <h2><?php the_title(); ?></h2>
            <div><?php the_content(); ?></div>
        </div>
    <?php endwhile;
endif;
wp_reset_postdata();
?>