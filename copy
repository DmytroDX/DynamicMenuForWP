add_filter('elementor/widget/render_content', function($content, $widget) {
    if ($widget->get_name() === 'heading') {
        $settings = $widget->get_settings_for_display();
        $custom_class = $settings['custom_heading_style'] === 'textured' ? 'heading-textured' : 'heading-default';

        // Додати кастомний клас до заголовка
        $content = str_replace('class="elementor-heading-title"', 'class="elementor-heading-title ' . $custom_class . '"', $content);
    }
    return $content;
}, 10, 2);