// custom-gutenberg-format.js
wp.richText.registerFormatType('custom/scroll-format', {
    title: 'Scroll Format',
    tagName: 'span',  // Можна використовувати будь-який HTML-тег
    className: 'class-one class-two',  // Ваші два класи
    attributes: {
        'data-scroll': 'data-scroll',  // Додавання атрибуту data-scroll
    },
    edit({ isActive, value, onChange }) {
        const onToggleFormat = () => {
            onChange(
                wp.richText.toggleFormat(
                    value,
                    { type: 'custom/scroll-format' }
                )
            );
        };

        return wp.element.createElement(
            wp.editor.RichTextToolbarButton, 
            {
                icon: 'admin-site-alt3',  // Виберіть іконку для кнопки
                title: 'Scroll Format',
                onClick: onToggleFormat,
                isActive
            }
        );
    }
});