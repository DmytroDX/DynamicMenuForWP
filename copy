// Додавання атрибутів і класів через фільтр
wp.hooks.addFilter(
    'blocks.getSaveContent.extraProps',
    'custom/image-extra-attributes',
    (extraProps, blockType, attributes) => {
        if (blockType.name === 'core/image' && attributes.className && attributes.className.includes('is-style-custom-image-style')) {
            // Додаємо додаткові класи
            extraProps.className = extraProps.className + ' class-one class-two';
            // Додаємо атрибут data-scroll
            extraProps['data-scroll'] = 'true';
        }
        return extraProps;
    }
);