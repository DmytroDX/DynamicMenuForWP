function my_custom_elementor_scripts() {
    // Реєструємо скрипти
    wp_register_script('my-custom-script', get_template_directory_uri() . '/js/custom-script.js', array('jquery'), null, true);

    // Підключаємо скрипти на фронтенді
    if ( ! Elementor\Plugin::instance()->editor->is_edit_mode() ) {
        wp_enqueue_script('my-custom-script');
    }
}

add_action('wp_enqueue_scripts', 'my_custom_elementor_scripts');

// Підключаємо скрипти в редакторі Elementor
function my_custom_elementor_editor_scripts() {
    wp_enqueue_script('my-custom-script');
}

add_action('elementor/editor/before_enqueue_scripts', 'my_custom_elementor_editor_scripts');