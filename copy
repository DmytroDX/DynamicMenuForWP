function setHeight() {
  let maxHeight = 0;
  
  $(".step").each(function(index, element) {
    if ($(element).height() > maxHeight) {
      maxHeight = $(element).height();
    }
  });
  
  $(".step").height(maxHeight);
}

setHeight();
